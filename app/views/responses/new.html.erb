<!-- Validation failure messages -->
<% if @response.errors.any? %>
  <% @response.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Response</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_response" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for question_id -->
      <div class="form-group">
        <label for="question_id" class="control-label">
          Question
        </label>

        <%= select_tag(:question_id, options_from_collection_for_select(Question.all, :id, :user_id, @response.question_id), :class => "form-control") %>
      </div>

      <!-- Label and input for time -->
      <div class="form-group">
        <label for="time" class="control-label">
          Time
        </label>

        <input type="text" id="time" name="time" placeholder="Time" class="form-control" value="<%= @response.time %>">
      </div>

      <!-- Label and input for response_text -->
      <div class="form-group">
        <label for="response_text" class="control-label">
          Response text
        </label>

        <input type="text" id="response_text" name="response_text" placeholder="Response text" class="form-control" value="<%= @response.response_text %>">
      </div>

      <button class="btn btn-success">
        Create Response
      </button>
      or
      <a href="/responses">Cancel</a>
    </form>
  </div>
</div>
