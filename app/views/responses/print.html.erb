<% @dates_array.each do |date| %> 
<div class="row">
    
    <div class="col-xs-3 align-self-center "><div class="mx-3 my-3"><%= date.to_datetime.strftime("%A, %B %Y")%></div></div>
    
    <div class="col-xs-9">
    <ul class="list-group list-group-flush">
    <% @responses.each do |response| %>
    <% if response.created_at > date.to_datetime && response.created_at < date.to_datetime + 1 then %>
        <li class="list-group-item"><%=response.response_text%></li>
    <%end%>
    <% end %>
    </ul>
    </div>
    
    
    
</div>
<%end%>