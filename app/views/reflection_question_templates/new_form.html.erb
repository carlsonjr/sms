<!-- Validation failure messages -->
<% if @reflection_question.present? %>
  <% if @reflection_question.errors.any? %>
    <% @reflection_question.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new reflection question
</h1>

<hr>

<form action="/create_reflection_question" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @reflection_question.try(:user_id) %>">
  </div>

  <!-- Label and input for question_text -->
  <div class="form-group">
    <label for="question_text">
      Question text
    </label>

    <input type="text" id="question_text" name="question_text" class="form-control" value="<%= @reflection_question.try(:question_text) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create reflection question
  </button>
</form>

<hr>

<a href="/reflection_questions">
  Go back
</a>
