<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal", role: "form" }) do |f| %>
<%= devise_error_messages! %>

<div class="row">
  <div class="col-12">
    <div class="jumbotron" style="padding: 1rem 1rem;">
    
       <p class="h2 mb-2">Edit the basics</p>

        <div class="form-row mb-3">
          <div class="col">
              <%= f.label :phone_number, class: "control-label" %>
              <%= f.text_field :phone_number, :class => "form-control", :placeholder => "e.g., 8474913300" %>
            </div>
            
          <div class="col">
            <%= f.label :email, class: "control-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
        </div>
        <div class="form-row mb-3">
          <div class="col">
            <%= f.label :time_zone, class: "control-label" %>
              <% identifiers = ActiveSupport::TimeZone.all %>
               <%= f.collection_select :time_zone, identifiers, :name, :name, {}, {class: "form-control"} %>
          </div>
          
          
        </div>
        
        
        <div class="form-row">
        
        
            <div class="col">
              <%= f.label :password, class: "control-label" %>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                <p class="help-block">
                  <% if @validatable %>
                  (<%= @minimum_password_length %> characters minimum)
                  <% end %>
                </p>
            </div>
    
            <div class="col">
              <%= f.label :password_confirmation, class: "control-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
        
        </div>

</div>
</div>
</div>
<div class="row">
  <div class="col-12">
    <div class="jumbotron" style="padding: 1rem 1rem;">
      <p class="h2">Change your question</p>
          <div class="form-row mb-3">
            <div class="col">
                <select name="question_text" class="form-control form-control-lg">
                  <option value="What did you learn today?" selected="selected">What did you learn today?</option>
                  <option value="What do you want to remember from today?">What do you want to remember from today?</option>
                  <option value="What are you grateful for today?">What are you grateful for today?</option>
                </select>
            </div>
          </div>
          <div class ="form-row">
            <div class="col">

              <p><%= f.check_box :enabled, :value => 1 %> Receive daily text messages?</p>

               

              
            </div>
          </div>
      
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <div class="jumbotron" style="padding: 1rem 1rem;">
      <p class="h2">Enter your current password to confirm changes</p>

          <div class="form-row">
            <div class="col">
          <div class="form-group">
            <%= f.label :current_password, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
              <p class="help-block">
                We need your current password to confirm your changes.
              </p>
            </div>
          </div>
            </div>
          </div>
      
    </div>
  </div>
</div>

<div class="row mb-5">
  <div class="col-12">
      <%= f.submit "Update account", class: "btn btn-success btn-block btn-lg btn-block" %>
  </div>
</div>    
  
<% end %>
