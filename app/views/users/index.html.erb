<div class="page-header">
  <h1>
    Users
    <a href="/users/new" class="btn btn-lg btn-success">New User</a>
  </h1>
</div>

 <h1> 
 <% phone_number = "16305029079"%>
 <%=phone_number%></br>
 <% user_id=User.where(:phone_number => phone_number).first.id%>
 <%=user_id%>
 
 
 </h1>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Phone number</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
          <%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.phone_number %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
