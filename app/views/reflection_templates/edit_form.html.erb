<!-- Validation failure messages -->
<% if @reflection.errors.any? %>
  <% @reflection.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit reflection #<%= @reflection.id %>
</h1>

<hr>

<form action="/update_reflection/<%= @reflection.id %>" method="post">
  <!-- Label and input for created_at -->
  <div class="form-group">
    <label for="created_at">
      Created at
    </label>

    <input type="text" id="created_at" name="created_at" class="form-control" value="<%= @reflection.created_at %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update reflection
  </button>
</form>

<hr>

<a href="/reflections">
  Go back
</a>
