<h1>
  All reflections
</h1>

<a href="/reflections/new">
  Add a new reflection
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Created at
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @reflections.each do |reflection| %>
  <tr>
    <td>
      <%= reflection.id %>
    </td>

    <td>
      <%= reflection.created_at %>
    </td>

    <td>
      <%= time_ago_in_words(reflection.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(reflection.updated_at) %> ago
    </td>

    <td>
      <a href="/reflections/<%= reflection.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
